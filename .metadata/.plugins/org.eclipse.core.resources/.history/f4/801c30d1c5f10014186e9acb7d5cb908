			System.out.println("***************************************");
			System.out.println("Where does the following verse belong?");
			System.out.println("");
			System.out.println("\""+bibleBook.verses.get(randVerse)+"\"");
			int randChoice = rand.nextInt(4-1)+1;
			switch (randChoice){
			case 1:
